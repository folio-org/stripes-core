    "okapiInterfaces": {
      "users-bl": "3.0 4.0",
      "authtoken": "1.0 2.0",
      "configuration": "2.0"
    },
    "permissionSets": [
      {
        "permissionName": "settings.enabled",
        "displayName": "UI: settings area is enabled"
      },
      {
        "permissionName": "reset-password-link.reset",
        "displayName": "Reset password: user can reset password by link",
        "subPermissions": [
          "validation.rules.collection.get",
          "users-bl.password-reset-link.reset"
        ],
        "visible": true
      }
    ]
